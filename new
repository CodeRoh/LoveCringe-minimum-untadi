<body>

<div class="card">
  <h1>Subu will you be my valentine? üíñ</h1>
  <div class="buttons" id="btnArea">
    <button id="yesBtn">Yes üíò</button>
    <button id="noBtn">No üíî</button>
  </div>
</div>

<script>
const noBtn = document.getElementById('noBtn');
const yesBtn = document.getElementById('yesBtn');
const btnArea = document.getElementById('btnArea');

/* Floating hearts */
setInterval(() => {
  const h = document.createElement('div');
  h.className = 'heart';
  h.textContent = Math.random() > 0.5 ? '‚ù§Ô∏è' : 'üíñ';
  h.style.left = Math.random() * 100 + 'vw';
  h.style.fontSize = Math.random() * 18 + 18 + 'px';
  h.style.animationDuration = Math.random() * 4 + 6 + 's';
  document.body.appendChild(h);
  setTimeout(() => h.remove(), 9000);
}, 700);

/* Telangana Telugu + fun texts */
const funnyTexts = [
  "NO button only naam ke vaasthe üòÇ",
  "Endi ra idi üòè",
  "Ala kaadu amma üòÇ",
  "YES nokku ra baby ‚ù§Ô∏è",
  "Lite teesko üôÉ",
  "Ayyo almost üòÑ",
  "Ee NO button pani kaadu!",
  "Try chesthunnav ga üòÇ",
  "Heart already YES annadi ‚ù§Ô∏è"
];

/* Orbit movement around YES (no overlap ever) */
function moveNo() {
  const area = btnArea.getBoundingClientRect();
  const yes = yesBtn.getBoundingClientRect();
  const no = noBtn.getBoundingClientRect();

  const centerX = yes.left - area.left + yes.width / 2;
  const centerY = yes.top - area.top + yes.height / 2;

  const radius = Math.max(yes.width, yes.height) + 45;
  const angle = Math.random() * Math.PI * 2;

  let x = centerX + radius * Math.cos(angle) - no.width / 2;
  let y = centerY + radius * Math.sin(angle) - no.height / 2;

  x = Math.max(10, Math.min(x, area.width - no.width - 10));
  y = Math.max(10, Math.min(y, area.height - no.height - 10));

  noBtn.style.left = x + "px";
  noBtn.style.top = y + "px";

  showText(x, y);
}

/* Show text longer */
function showText(x, y) {
  const t = document.createElement('div');
  t.className = 'no-text';
  t.textContent = funnyTexts[Math.floor(Math.random() * funnyTexts.length)];
  t.style.left = (x + noBtn.offsetWidth / 2) + 'px';
  t.style.top = (y - 12) + 'px';
  btnArea.appendChild(t);

  /* Stay visible */
  setTimeout(() => t.style.opacity = "0", 2400);
  setTimeout(() => t.remove(), 2800);
}

/* Mobile + desktop triggers */
noBtn.addEventListener('touchstart', e => {
  e.preventDefault();
  moveNo();
});

btnArea.addEventListener('touchstart', e => {
  const t = e.touches[0];
  const r = noBtn.getBoundingClientRect();
  const d = Math.hypot(
    t.clientX - (r.left + r.width / 2),
    t.clientY - (r.top + r.height / 2)
  );
  if (d < 80) moveNo();
});

noBtn.addEventListener('mouseenter', moveNo);

/* YES celebration */
yesBtn.addEventListener('click', () => {
  const overlay = document.createElement('div');
  overlay.className = 'celebrate';
  overlay.innerHTML = `
    <img src="https://media.giphy.com/media/MDJ9IbxxvDUQM/giphy.gif">
    <h2>YAYYY üíû<br>Valentine secured üòå‚ù§Ô∏è</h2>
  `;
  document.body.appendChild(overlay);

  for (let i = 0; i < 180; i++) {
    const c = document.createElement('div');
    c.className = 'confetti';
    c.style.left = Math.random() * 100 + 'vw';
    c.style.top = '-20px';
    c.style.background = \`hsl(\${Math.random()*360},100%,60%)\`;
    c.style.animationDuration = Math.random()*2 + 2 + 's';
    document.body.appendChild(c);
    setTimeout(() => c.remove(), 4000);
  }
});
</script>

</body>
</html>
