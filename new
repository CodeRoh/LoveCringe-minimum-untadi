<style>
* {
  box-sizing: border-box;
  font-family: 'Segoe UI', Tahoma, sans-serif;
}

body {
  margin: 0;
  height: 100vh;
  background: linear-gradient(135deg, #ff758c, #ff7eb3);
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

/* Floating hearts */
.heart {
  position: fixed;
  font-size: 22px;
  animation: float 8s linear infinite;
  opacity: 0.7;
}

@keyframes float {
  from { transform: translateY(100vh); }
  to { transform: translateY(-120vh); }
}

.card {
  background: white;
  padding: 40px 20px;
  border-radius: 20px;
  text-align: center;
  width: min(90%, 420px);
  box-shadow: 0 20px 40px rgba(0,0,0,0.25);
  z-index: 10;
}

h1 {
  color: #ff2e63;
  font-size: 1.7rem;
  margin-bottom: 25px;
}

.buttons {
  position: relative;
  height: 200px;
  width: 100%;
}

button {
  padding: 12px 28px;
  font-size: 18px;
  border-radius: 30px;
  border: none;
}

#yesBtn {
  background: #ff2e63;
  color: white;
}

#noBtn {
  background: #e0e0e0;
  color: #333;
  position: absolute;
  transition: left 0.4s ease, top 0.4s ease;
}

/* Funny text bubble */
.no-text {
  position: absolute;
  background: black;
  color: white;
  padding: 6px 12px;
  border-radius: 14px;
  font-size: 13px;
  white-space: nowrap;
  z-index: 99;
  opacity: 1;
  transition: opacity 0.4s ease;
}

